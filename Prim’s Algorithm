// prim.c
#include <stdio.h>
#define INF 9999
#define MAX 100

void prim(int graph[MAX][MAX], int n) {
    int selected[MAX] = {0};
    int i, j, edge_count = 0, min, x, y;

    selected[0] = 1;

    printf("Edges in MST:\n");
    while (edge_count < n - 1) {
        min = INF;
        for (i = 0; i < n; i++) {
            if (selected[i]) {
                for (j = 0; j < n; j++) {
                    if (!selected[j] && graph[i][j] && graph[i][j] < min) {
                        min = graph[i][j];
                        x = i;
                        y = j;
                    }
                }
            }
        }
        printf("%d - %d : %d\n", x, y, graph[x][y]);
        selected[y] = 1;
        edge_count++;
    }
}

int main() {
    int graph[MAX][MAX], n, i, j;
    printf("Enter number of vertices: ");
    scanf("%d", &n);
    printf("Enter adjacency matrix (use 9999 for no edge):\n");

    for (i = 0; i < n; i++)
        for (j = 0; j < n; j++)
            scanf("%d", &graph[i][j]);

    prim(graph, n);

    return 0;
}
